{
  "name": "regista",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.5.0",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "git config --local core.hooksPath .githooks",
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "jest",
    "lint": "turbo lint",
    "format": "prettier --parser typescript --write \"**/*.{js,cjs,mjs,ts,tsx}\"",
    "publish-packages": "npm run build:package && changeset version && changeset publish",
    "changeset": "changeset",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "turbo": "latest"
  },
  "lint-staged": {
    "*/**/*.{js,cjs,mjs,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  }
}