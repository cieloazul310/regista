{
  "name": "@cieloazul310/regista",
  "description": "Simple and type-safe Markdown/MDX content management tool for Next.js App Router",
  "version": "1.2.0",
  "type": "module",
  "main": "module/index.js",
  "types": "module/index.d.ts",
  "files": [
    "module"
  ],
  "license": "MIT",
  "author": {
    "name": "@cieloazul310",
    "url": "https://cieloazul310.github.io"
  },
  "keywords": [
    "Next.js",
    "App Router",
    "MDX"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "tsc": "tsc -p ./tsconfig.json",
    "clean": "git clean -fx lib/ module/",
    "build": "npm run clean && npm run tsc",
    "dev": "npm run tsc -- --watch",
    "lint": "eslint src --fix"
  },
  "dependencies": {
    "@cieloazul310/regista-data": "^1.2.0",
    "@cieloazul310/regista-mdx": "^1.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "eslint": "^9.31.0"
  },
  "peerDependencies": {
    "@mdx-js/mdx": "^3.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,ts}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  }
}